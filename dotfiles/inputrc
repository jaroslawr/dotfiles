set convert-meta on

# COMPLETION
#

# Tab gives next completion
"\t": menu-complete

# Shift-Tab gives previous completion
"\e[Z": menu-complete-backward

# Only complete hidden files if pattern begins with .
set match-hidden-files off

# Ignore case
set completion-ignore-case on

# On first Tab immediately list completions
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Never prompt whether to show all completions
set completion-query-items 0

# Do not page completions
set page-completions off

# Only complete hidden files if pattern begins with .
set match-hidden-files off

# HISTORY
#

"\e[A": history-search-backward
"\e[B": history-search-forward
