#!/usr/bin/bash

# 'git show' wrapper for fzf-git-log
#

# Git show options for preview
GIT_SHOW_OPTIONS=()
GIT_SHOW_OPTIONS+=("--color=always")
GIT_SHOW_OPTIONS+=("--date=iso-strict")
GIT_SHOW_OPTIONS+=("--pretty=${FZF_GIT_LOG_SHOW_PRETTY}")

# Run git show
exec git show "${GIT_SHOW_OPTIONS[@]}" "$@"
