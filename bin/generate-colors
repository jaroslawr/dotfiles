#!/usr/bin/python

import sys

import colormath
import colormath.color_objects

from dataclasses import dataclass
from colormath.color_conversions import convert_color


@dataclass
class Color:
    name: str
    h: float
    s: float
    l: float


normal_s = 1.0
normal_l = 0.75

bright_s = 1.0
bright_l = 0.7

grayscale_h = 200
grayscale_s = 0.4

black_l = 0.1

colors = []
colors.append(Color(name="BLACK",          h=grayscale_h, s=grayscale_s, l=black_l))
colors.append(Color(name="RED",            h=0,           s=normal_s,    l=normal_l))
colors.append(Color(name="GREEN",          h=150,         s=normal_s,    l=normal_l))
colors.append(Color(name="YELLOW",         h=55,          s=normal_s,    l=normal_l))
colors.append(Color(name="BLUE",           h=200,         s=normal_s,    l=normal_l))
colors.append(Color(name="MAGENTA",        h=25,          s=normal_s,    l=normal_l))
colors.append(Color(name="CYAN",           h=180,         s=normal_s,    l=normal_l))
colors.append(Color(name="WHITE",          h=grayscale_h, s=grayscale_s, l=normal_l))
colors.append(Color(name="BRIGHT_BLACK",   h=grayscale_h, s=grayscale_s, l=bright_l))
colors.append(Color(name="BRIGHT_RED",     h=30,          s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_GREEN",   h=105,         s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_YELLOW",  h=85,          s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_BLUE",    h=260,         s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_MAGENTA", h=335,         s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_CYAN",    h=210,         s=bright_s,    l=bright_l))
colors.append(Color(name="BRIGHT_WHITE",   h=0,           s=0,           l=1.0))

for i, color in enumerate(colors):
    print(f"export COLOR_{color.name}=\"\\[$(tput setaf {i})\\]\"")

print()

for color in colors:
    hsl = colormath.color_objects.HSLColor(color.h, color.s, color.l)
    rgb = convert_color(hsl, colormath.color_objects.sRGBColor)
    rgb_hex = rgb.get_rgb_hex()
    print(f"export COLOR_{color.name}_RGB='{rgb_hex}'")

print()

grayscale_colors = []
grayscale_count = 100
for i in range(0, grayscale_count):
    color = Color(name=f"GRAY_{i}", h=grayscale_h,s=grayscale_s, l=i*(1.0/grayscale_count))
    hsl = colormath.color_objects.HSLColor(color.h, color.s, color.l)
    rgb = convert_color(hsl, colormath.color_objects.sRGBColor)
    rgb_hex = rgb.get_rgb_hex()
    print(f"export COLOR_{color.name}_RGB='{rgb_hex}'")
